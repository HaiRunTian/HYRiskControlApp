<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--无标题栏主题-->
    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
    </style>

    <!--titlebar样式-->
    <style name="TitleBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/shape_gradient_color_blue</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <!--titlebar样式 左文本-->
    <style name="TitleBarStyleLeftText">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/textsize_big</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <!--titlebar样式 左文本-->
    <style name="TitleBarStyleLeftText2">

        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <!--titlebar样式 中间文本-->
    <style name="TitleBarStyleMiddleText">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/textsize_big</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>


    <!--titlebar样式 右边
    文本-->
    <style name="TitleBarStyleRightText">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/textsize_text</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <!--自定义textview默认字体格式-->
    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--自定义底部导航栏选项样式-->
    <style name="HomeBottomMenuItemStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textSize">@dimen/textsize_title</item>
        <item name="android:textColor">@drawable/selector_home_bottom_text</item>
    </style>

    <!--自定义顶部actionbar组件文本样式-->
    <style name="HomeActionBarComponentText">
        <item name="android:textSize">@dimen/textsize_title</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!--自定义首页左侧滑item文本样式-->
    <style name="HomeLinearLeftItemText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/textsize_title</item>
        <item name="android:textColor">@color/colorMiddleGrey2</item>
        <item name="android:lineSpacingExtra">20dp</item>
        <item name="android:drawablePadding">15dp</item>
    </style>

    <!--自定义ExpandableListViewGroupItem文本样式-->
    <style name="ExpandableListViewGroupItemText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:singleLine">false</item>
        <item name="android:textSize">@dimen/textsize_big</item>
        <item name="android:background">@drawable/selector_linear_white_grey</item>
    </style>

    <!--自定义ExpandableListViewChildsItem文本样式-->
    <style name="ExpandableListViewChildsItemText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:singleLine">false</item>
        <item name="android:textSize">@dimen/textsize_title</item>
    </style>

    <!--自定义首页左侧滑linear样式-->
    <style name="HomeLinearLeft">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/selector_linear_white_grey</item>
    </style>

    <!--自定义首页右边放大缩小按钮-->
    <style name="HomeBtnOutIn">
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@drawable/shape_bg_rect_transparent</item>
        <item name="android:paddingTop">1dp</item>
    </style>


    <!--自定义修改密码输入框样式-->
    <style name="ModifyPassWordEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:background">@drawable/shape_circlecorner_white</item>
    </style>

    <!--自定义首页左侧滑linear样式-->
    <style name="UserProfileItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/selector_linear_white_grey</item>
        <item name="android:layout_height">45dp</item>
    </style>

    <!--自定义首页左侧滑linear样式(修改密码框)-->
    <style name="UserProfileItemStylePwd">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/selector_linear_white_grey</item>
    </style>


    <!--自定义用户信息右侧输入框样式-->
    <style name="ModifyUserProfileEdittext">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:gravity">right</item>
        <item name="android:background">@null</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">@dimen/textsize_title</item>
        <!--<item name="android:textColor">@color/colorMiddleGrey</item>-->
        <item name="android:textColorHint">@color/colorWhiteGrey1</item>
    </style>

    <style name="CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_checkbox</item>
    </style>

    <!--自定义用户信息右侧输入框样式-->
    <style name="ModifyUserProfileEdittext2">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">right</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">@dimen/textsize_title</item>
        <item name="android:textColor">@color/colorMiddleGrey</item>
        <item name="android:textColorHint">@color/colorMiddleGrey</item>
    </style>

    <!--自定义用户信息左侧文本样式-->
    <style name="ModifyUserProfileText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">@dimen/textsize_title</item>
    </style>

    <!--自定义用户信息左侧文本样式-->
    <style name="ModifyUserProfileText2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">@dimen/textsize_title</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <!--自定义dialog活动样式-->
    <style name="DialogActivity" parent="@style/Theme.AppCompat.Dialog">
        <!-- 去黑边 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置是否可滑动 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 设置是否透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景 -->
        <item name="android:background">@null</item>
        <!-- 窗口背景 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否变暗 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 点击空白部分activity不消失 -->
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <!--自定义Layout模板左侧文本样式-->
    <style name="CustomLayoutLeftText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/textsize_title</item>
    </style>

    <style name="CustomSpinnerStyle">
        <item name="android:background">@drawable/selector_spinner</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--自定义Layout模板左侧文本样式（白底）-->
    <style name="CustomLayoutEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/textsize_big</item>
    </style>

    <style name="FragmentTitleBarLeftLogo">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="FragmentTitleBarMiddleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_big_plus2</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorLoginBgEnd</item>
    </style>

    <!--自定义Layout模板左侧文本样式(enable-false)-->
    <style name="CustomLayoutEditTextDisable">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">5dp</item>
        <!--<item name="android:background">@drawable/shape_circlecorner_white</item>-->
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/textsize_title</item>
        <item name="android:enabled">false</item>
    </style>

    <!--自定义Layout模板左侧文本样式(enable-false)-->
    <style name="CustomLayoutEditTextNewNews">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">5dp</item>
        <!--<item name="android:background">@drawable/shape_circlecorner_white</item>-->
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/textsize_title</item>
    </style>

    <!--浏览模块左侧文本-->
    <style name="QueryTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textSize">@dimen/textsize_title</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="RIsklistViewDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFullscreen">true</item>
        <!--设置dialog的背景-->
        <item name="android:windowBackground">@color/colorLightBlue</item>
        <!--设置Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--设置无标题-->
        <item name="windowNoTitle">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--设置窗口内容不覆盖-->
        <item name="android:windowContentOverlay">@null</item>
        <!--设置动画，在这里使用让它继承系统的Animation.Dialog-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!--背景是否模糊显示-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--设置点击dialog外部是否消失-->
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>


    <style name="RIsklistViewDialog2" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFullscreen">true</item>
        <!--设置dialog的背景-->
        <item name="android:windowBackground">@color/colorWhite</item>
        <!--设置Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--设置无标题-->
        <item name="windowNoTitle">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--设置窗口内容不覆盖-->
        <item name="android:windowContentOverlay">@null</item>

        <!--设置动画，在这里使用让它继承系统的Animation.Dialog-->
        <!--<item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>-->
        <item name="android:windowAnimationStyle">@style/AnimSlideBottom</item>
        <!--背景是否模糊显示-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--设置点击dialog外部是否消失-->
        <item name="android:windowCloseOnTouchOutside">true</item>

    </style>

    <style name="AnimSlideBottom" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/anim_fade_in</item>
        <item name="android:windowExitAnimation">@anim/anim_fade_out</item>
    </style>

    <style name="SysParamTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textSize">@dimen/textsize_big</item>
        <item name="android:textColor">@color/colorMiddleGrey2</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <!--右上角+号弹出收起动画-->
    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/anim_popup_fade_in</item>
        <item name="android:windowExitAnimation">@anim/anim_popup_fade_out</item>
    </style>

    <style name="RadioGroupStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableBottom">@drawable/selector_radiobutton_bottomline</item>
    </style>

    <style name="RadioButton_small">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:background">@drawable/selector_radiobutton_small</item>
        <item name="android:button">@null</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="Fuction_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="RadioButton_bottom">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
