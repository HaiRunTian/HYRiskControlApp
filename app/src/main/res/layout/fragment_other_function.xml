<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/linearUserAdmin"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorWhite"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearMessageTop"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            style="@style/FragmentTitleBarLeftLogo"
            android:src="@mipmap/ic_function_n"/>

        <TextView
            style="@style/FragmentTitleBarMiddleText"
            android:text="@string/string_other"/>

    </LinearLayout>

    <include layout="@layout/separate_line_h"></include>

    <LinearLayout
        android:id="@+id/linearMessageList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lvMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:entries="@array/testArrays">

        </ListView>


    </LinearLayout>

</LinearLayout>