<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/linearUserAdmin"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorWhite"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearUserProfileTop"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgvUserProfileHead"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_activity_home_actionbar_left2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="未登录"
                android:textSize="@dimen/textsize_big"/>

            <!--<TextView-->
                <!--android:id="@+id/tvRole"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="15dp"-->
                <!--android:text="系统管理员"/>-->

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:text="拥有的权限"-->
                <!--android:textColor="@color/colorHomeActionBarRight"/>-->
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/separate_line_h"></include>

    <LinearLayout
        android:id="@+id/linearUserProfileMiddle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearUserProfilePInfo"
            style="@style/HomeLinearLeft">

            <TextView
                style="@style/HomeLinearLeftItemText"
                android:drawableLeft="@mipmap/ic_useradmin_profile_32px"
                android:text="@string/string_userprofile"/>
        </LinearLayout>

        <!--<LinearLayout-->
            <!--android:id="@+id/linearUserProfileUserlog"-->
            <!--style="@style/HomeLinearLeft">-->

            <!--<TextView-->
                <!--style="@style/HomeLinearLeftItemText"-->
                <!--android:drawableLeft="@mipmap/ic_useradmin_log2_32px"-->
                <!--android:text="@string/string_linear_userprofile_pInfo_item2"/>-->
        <!--</LinearLayout>-->

        <LinearLayout
            android:id="@+id/linearUserProfileUpdate"
            style="@style/HomeLinearLeft">

            <TextView
                style="@style/HomeLinearLeftItemText"
                android:drawableLeft="@mipmap/ic_useradmin_update_32px"
                android:text="@string/string_update_online"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearUserProfileBottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical">

        <include layout="@layout/separate_line_h"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSettings"
                style="@style/HomeLinearLeftItemText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/selector_linear_white_grey"
                android:clickable="true"
                android:drawableLeft="@mipmap/ic_useradmin_settings3_32px"
                android:text="@string/string_settings"/>

            <include layout="@layout/seperate_line_v"></include>

            <TextView
                android:id="@+id/tvLogOut"
                style="@style/HomeLinearLeftItemText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/selector_linear_white_grey"
                android:clickable="true"
                android:drawableLeft="@mipmap/ic_useradmin_logout_32px"
                android:text="@string/string_logout"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>